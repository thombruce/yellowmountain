- links = []
- if controller_name != 'sessions'
  - links << (link_to "Log in", new_session_path(resource_name), :class => 'github').to_s
- if devise_mapping.registerable? && controller_name != 'registrations'
  - links << (link_to "Sign up", new_registration_path(resource_name), :class => 'github').to_s
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  - links << (link_to "Forgot your password?", new_password_path(resource_name), :class => 'github').to_s
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  - links << (link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class => 'github').to_s
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  - links << (link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), :class => 'github').to_s
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    - links << (link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => 'github').to_s

.small.text-center{:style => 'padding-top:15px;'}
  - links.each do |link|
    = link.html_safe
    - if link == links.last
      %br/
    - else
      %span.github= '|'
