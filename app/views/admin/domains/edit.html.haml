.col-xs-12
  .content-panel
    %h2.headline.yellowmountain= @domain.full
    %div
      = form_for([:admin, @domain]) do |f|

        - unless @domain.errors.empty?
          .alert.alert-error.alert-danger
            %button.close{'data-dismiss' => 'alert', :type => 'button'} x
            %ul
              - @domain.errors.full_messages.each do |e|
                %li= e

        .form-group
          = f.label :owner
          = f.grouped_collection_select :global_owner, [User, Organization], :all, :model_name, :to_global_id, :name

        .form-group
          = f.label :name
          = f.text_field :name, :class => 'form-control'

        .form-group
          = f.label :extension
          = f.text_field :extension, :class => 'form-control'

        .actions
          = f.submit "Update", :class => 'btn btn-default'