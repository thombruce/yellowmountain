%tr
  %td
    %a.github{:href => admin_organization_path(organization.slug), :style => 'display:block;margin:-8px;padding:8px;'}
      %strong= organization_counter + 1
  %td
    %a.github{:href => admin_organization_path(organization.slug), :style => 'display:block;margin:-8px;padding:8px;'}
      = organization.name
      - unless controller_name == 'organizations'
        %small
          - if organization.owner == @user
            (Owner)
          - else
            (Member)
  - if controller_name == 'organizations'
    %td
      %a.github{:href => admin_organization_path(organization.slug), :style => 'display:block;margin:-8px;padding:8px;'}
        = organization.owner.full_name
  %td.text-center
    %a.github{:href => admin_organization_path(organization.slug), :style => 'display:block;margin:-8px;padding:8px;'}
      = 1 if organization.owner # because we haven't yet added a 'members' set/resource
  %td.text-center
    %a.github{:href => admin_organization_path(organization.slug), :style => 'display:block;margin:-8px;padding:8px;'}
      = organization.domains.count
  %td.text-center
    %a.github{:href => admin_organization_path(organization.slug), :style => 'display:block;margin:-8px;padding:8px;'}
      = Mailbox.where({domain: organization.domains}).all.count
  %td
    %a{:href => edit_admin_organization_path(organization.slug)}
      %i.fa.fa-fw.fa-pencil.olive
    %a{:href => admin_organization_path(organization.slug), 'data-method' => 'delete', :rel => 'nofollow', 'data-confirm' => 'Are you sure?'}
      %i.fa.fa-fw.fa-trash-o.rubylang