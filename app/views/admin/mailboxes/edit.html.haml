.col-xs-12
  .content-panel
    %h2.headline.yellowmountain= @mailbox.address
    %div
      = form_for([:admin, @mailbox]) do |f|

        - unless @mailbox.errors.empty?
          .alert.alert-error.alert-danger
            %button.close{'data-dismiss' => 'alert', :type => 'button'} x
            %ul
              - @mailbox.errors.full_messages.each do |e|
                %li= e

        .actions
          = f.submit "Update", :class => 'btn btn-default'
