%article.post_admin
  %h2.headline.yellowmountain
    %a{:href => vanity_path(page.slug)}= page.title
  %h5
    = page.created_at.strftime("%B %d, %Y")
    %small= link_to 'Edit', edit_admin_page_path(page)
  ~ truncate(captains_log(page.body).html_safe, length: 300, escape: false, separator: ' ', omission: '... ') { link_to '(continue reading)', vanity_path(page.slug) }