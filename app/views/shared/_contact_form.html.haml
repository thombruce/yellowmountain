= form_for @email do |f|
  = f.label :name
  = f.text_field :name, :class => 'form-control'
  %br/
  = f.label :email
  = f.email_field :email, :class => 'form-control'
  %br/
  = f.label :subject
  = f.text_field :subject, :class => 'form-control'
  %br/
  = f.label :message
  = f.text_area :message, :class => 'form-control'
  %br/
  = f.submit 'Send message', :class=> "btn btn-primary"